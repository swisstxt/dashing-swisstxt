$(function() {
  // These settings override the defaults set in application.coffee. You can do this on a per dashboard basis.
  Dashing.gridsterLayout('[{"col":1,"row":1,"size_x":2,"size_y":2},{"col":3,"row":1,"size_x":3,"size_y":2},{"col":6,"row":1,"size_x":1,"size_y":1},{"col":7,"row":3,"size_x":1,"size_y":1},{"col":8,"row":3,"size_x":1,"size_y":1},{"col":8,"row":4,"size_x":1,"size_y":1},{"col":7,"row":4,"size_x":1,"size_y":1},{"col":3,"row":5,"size_x":3,"size_y":2},{"col":1,"row":3,"size_x":1,"size_y":4},{"col":3,"row":3,"size_x":3,"size_y":2},{"col":7,"row":1,"size_x":2,"size_y":2},{"col":7,"row":5,"size_x":2,"size_y":2}]') 

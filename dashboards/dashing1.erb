<% content_for :title do %>My super sweet dashboard<% end %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div data-id="bp" data-view="Text" data-title="Businessprocess" data-text="Waiting for Data"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="3" data-sizey="2">
      <div data-id="bw" data-view="Graph" data-title="Bandwidth" data-moreinfo="Mbit OUT" style="background-color:#6A93A7;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="vmcount" data-view="Meter" data-height="80" data-width="80" data-min="0" data-max="1000" data-moreinfo="Running VMs"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cs_cu_cpu" data-view="Meter" data-height="80" data-width="80" data-min="0" data-max="100" data-moreinfo="CU01 CPU" data-suffix="%"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cs_ix_cpu" data-view="Meter" data-height="80" data-width="80" data-min="0" data-max="100" data-moreinfo="IX CPU" data-suffix="%"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cs_cu_ram" data-view="Meter" data-height="80" data-width="80" data-min="0" data-max="100" data-moreinfo="CU01 Memory" data-suffix="%"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cs_ix_ram" data-view="Meter" data-height="80" data-width="80" data-min="0" data-max="100" data-moreinfo="IX Memory" data-suffix="%"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="3" data-sizey="2">
      <div data-id="pcache_stats" data-view="Graph" data-title="Pcache" data-moreinfo="Active Connections" style="background-color:#09409B;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="4">
      <div data-id="tickets" data-view="List" data-unordered="true" data-title="Open Tickets" data-moreinfo="INC, RFF and PRB"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="3" data-sizey="2">
      <div data-id="lsa" data-view="Graph" data-title="LiveStreaming Audio" data-moreinfo="Listeners" style="background-color:#106FA9;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div data-id="nagios" data-view="Nagios" data-unordered="true" data-title="Icinga Checks" data-moreinfo="Unacknowledged events"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div data-id="devopimg" data-view="BigImage" data-max="false"></div>
    </li>
  </ul>
</div>
